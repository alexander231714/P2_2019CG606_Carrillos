@model IEnumerable<P2_2019CG606.Models.departamentos>

@{
    ViewData["Title"] = "Index";
}

<h1>Departamentos de El Salvador</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.id_departamentos">Edit</a> |
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.id_departamentos">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id_departamentos">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
